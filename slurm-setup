#!/bin/bash -e

srun \
  --cpus-per-task 1 \
  --mem=4G \
  --container-writable \
  --container-image=python:3.10 \
  --container-name=web-archive-query-log-python-3.10 \
  --container-mounts="$PWD":/workspace \
  --chdir "$PWD" \
  --pty \
  bash -c "
  cd /workspace
  apt-get update -y
  pip install --user --upgrade pip cython pipenv
  pipenv install --deploy
  "
