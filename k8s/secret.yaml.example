# Backend Secrets - EXAMPLE FILE
# Copy this file to secret.yaml and fill in the actual values
#
# IMPORTANT: Never commit the actual secret.yaml to git!
#
# To encode a value to base64:
#   echo -n 'your-secret-value' | base64
#
# To decode a base64 value:
#   echo 'YmFzZTY0LXN0cmluZw==' | base64 -d

apiVersion: v1
kind: Secret
metadata:
  name: aql-backend-secrets
  namespace: user-ajjxp
  labels:
    app: aql-backend
    component: backend
type: Opaque
data:
  # Elasticsearch API key (base64-encoded)
  # Get this from your Elasticsearch administrator or Kibana
  # Example: echo -n 'your-actual-api-key' | base64
  ES_API_KEY: <BASE64_ENCODED_API_KEY>
