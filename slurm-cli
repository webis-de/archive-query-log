#!/bin/bash -e

srun \
  --cpus-per-task 10 \
  --ntasks-per-node 1 \
  --mem 100G \
  --container-writable \
  --container-image python:3.10 \
  --container-name web-archive-query-log-python-3.10 \
  --container-mounts "$PWD":/workspace \
  --chdir "$PWD" \
  --pty \
  sh -c "
  cd /workspace
  venv/bin/python -m pipenv run python -m archive_query_log $*
  "
